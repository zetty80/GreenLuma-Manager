<Window
    x:Class="GreenLuma_Manager.Dialogs.CustomMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Message"
    Width="480"
    MinHeight="220"
    MaxHeight="600"
    Background="#FF1A1A1A"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Topmost="True"
    WindowStartupLocation="CenterOwner">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="DarkBg" Color="#FF1A1A1A" />
            <SolidColorBrush x:Key="SurfaceBg" Color="#FF0F0F0F" />
            <SolidColorBrush x:Key="Border" Color="#FF2A2A2A" />
            <SolidColorBrush x:Key="Text" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="TextSecond" Color="#FFAAAAAA" />
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Background="{StaticResource DarkBg}"
            BorderBrush="{StaticResource Border}"
            BorderThickness="0,0,0,1"
            MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid Margin="24,0">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Path
                        Name="IconPath"
                        Width="20"
                        Height="20"
                        Margin="0,0,12,0"
                        Stretch="Uniform" />
                    <TextBlock
                        Name="TitleText"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Text}" />
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="1" Padding="24,20">
            <TextBlock
                Name="MessageText"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="{StaticResource TextSecond}"
                LineHeight="22"
                TextWrapping="Wrap" />
        </Border>
        <Border
            Grid.Row="2"
            Padding="24,16"
            Background="{StaticResource SurfaceBg}"
            BorderBrush="{StaticResource Border}"
            BorderThickness="0,1,0,0">
            <StackPanel
                Name="ButtonPanel"
                HorizontalAlignment="Right"
                Orientation="Horizontal" />
        </Border>
    </Grid>
</Window>