<Window
    x:Class="GreenLuma_Manager.Dialogs.CustomMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Message"
    Width="480"
    MinHeight="220"
    MaxHeight="600"
    Background="#FF1A1A1A"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Topmost="True"
    WindowStartupLocation="CenterOwner">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="DarkBg" Color="#FF1A1A1A" />
            <SolidColorBrush x:Key="SurfaceBg" Color="#FF0F0F0F" />
            <SolidColorBrush x:Key="Border" Color="#FF2A2A2A" />
            <SolidColorBrush x:Key="Accent" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="Text" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="TextSecond" Color="#FFAAAAAA" />
            <!--  ReSharper disable once Xaml.RedundantResource  -->
            <SolidColorBrush x:Key="Success" Color="#FF4CAF50" />
            <!--  ReSharper disable once Xaml.RedundantResource  -->
            <SolidColorBrush x:Key="Warning" Color="#FFFFAA00" />
            <!--  ReSharper disable once Xaml.RedundantResource  -->
            <SolidColorBrush x:Key="Danger" Color="#FFFF4444" />
            <!--  ReSharper disable once Xaml.RedundantResource  -->
            <SolidColorBrush x:Key="Info" Color="#FF2196F3" />
            <Style x:Key="MessageBtn" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="{StaticResource Accent}" />
                <Setter Property="Foreground" Value="{StaticResource DarkBg}" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Height" Value="40" />
                <Setter Property="MinWidth" Value="100" />
                <Setter Property="Padding" Value="24,0" />
                <Setter Property="FontSize" Value="13" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="UIElement.IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FFDDDDDD" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <!--  ReSharper disable once Xaml.RedundantResource  -->
            <Style
                x:Key="SecondaryBtn"
                BasedOn="{StaticResource MessageBtn}"
                TargetType="{x:Type Button}">
                <Setter Property="Background" Value="{StaticResource SurfaceBg}" />
                <Setter Property="Foreground" Value="{StaticResource Text}" />
                <Setter Property="BorderBrush" Value="{StaticResource Border}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="UIElement.IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FF1E1E1E" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Background="{StaticResource DarkBg}"
            BorderBrush="{StaticResource Border}"
            BorderThickness="0,0,0,1"
            MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid Margin="24,0">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Path
                        Name="IconPath"
                        Width="20"
                        Height="20"
                        Margin="0,0,12,0"
                        Stretch="Uniform" />
                    <TextBlock
                        Name="TitleText"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Text}" />
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="1" Padding="24,20">
            <TextBlock
                Name="MessageText"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="{StaticResource TextSecond}"
                LineHeight="22"
                TextWrapping="Wrap" />
        </Border>
        <Border
            Grid.Row="2"
            Padding="24,16"
            Background="{StaticResource SurfaceBg}"
            BorderBrush="{StaticResource Border}"
            BorderThickness="0,1,0,0">
            <StackPanel
                Name="ButtonPanel"
                HorizontalAlignment="Right"
                Orientation="Horizontal" />
        </Border>
    </Grid>
</Window>